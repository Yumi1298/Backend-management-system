<%- include("../parts/html-head") %> <%- include("../parts/navbar") %>
<div id="layoutSidenav">
  <%- include("../parts/layout-sidenav") %>
  <div id="layoutSidenav_content">
    <main>
      <div class="container-fluid px-4">
        <div
          class="modal fade"
          id="uploadModal"
          tabindex="-1"
          aria-hidden="true"
        >
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h1 class="modal-title fs-5">
                  上傳檔案
                </h1>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                  aria-label="Close"
                ></button>
              </div>
              <div class="modal-body">
                <form id="uploadForm" enctype="multipart/form-data">
                  <div class="mb-3">
                    <label for="formFile" class="form-label">選擇 CSV 檔案：</label>
                    <input class="form-control" type="file" id="formFile" name="file" accept=".csv" required>
                  </div>

                  <!-- <br /> -->

                  <p>**限使用cvs(utf-8)檔上傳</p>
                <div id="errorMessage" class="error"></div>
              </div>
              <div class="modal-footer">
                <button class="btn btn-primary" type="submit">上傳</button>
              </div>
            </form>
            </div>
          </div>
        </div>

        <h1 class="mt-4">客戶資料管理</h1>
        <div class="row my-3 d-flex justify-content-between">
          <div class="col-6 col-lg-3">
            <form class="d-flex" role="search">
              <input
                class="form-control me-2"
                type="search"
                name="keyword"
                placeholder="Search"
                aria-label="Search"
                value="<%= qs.keyword ? qs.keyword : '' %>"
              />
              <button class="btn btn-primary" type="submit">Search</button>
            </form>
          </div>

          <div class="col-auto">
            <a href="/user/add" class="btn btn-primary"> 新增資料 </a>
            <button
              type="button"
              class="btn btn-primary"
              data-bs-toggle="modal"
              data-bs-target="#uploadModal"
            >
              匯入Excel
            </button>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <table class="table table-bordered table-striped" id="resultsTable">
              <thead>
                <tr>
                  <th>編輯</th>
                  <th>編號</th>
                  <th>姓名</th>
                  <th>生日</th>
                  <th>手機</th>
                  <th>產品序號</th>
                  <th>購買日期</th>
                  <th>購買來源</th>
                  <th>刪除</th>
                </tr>
              </thead>
              <tbody>
                <% for(let r of rows){ %>
                <tr>
                  <td>
                    <a href="/user/edit/<%= r.sid %>">
                      <i class="fa-solid fa-pen-to-square"></i>
                    </a>
                  </td>
                  <td><%= r.sid %></td>
                  <td><%= r.name %></td>
                  <td><%= r.birthday %></td>
                  <td><%= r.mobile %></td>
                  <td><%= r.product_id %></td>
                  <td><%= r.purchase_date %></td>
                  <td><%= r.purchase_source %></td>

                  <td>
                    <a href="javascript: deleteOne(<%= r.sid %>)" id="deleteModal"
                      ><i class="fa-solid fa-trash"></i>
                    </a>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
        <div class="row">
          <div class="col-6">
            <nav aria-label="Page navigation example">
              <ul class="pagination">
                <li class="page-item <%= page===1 ? 'disabled' : '' %>">
                  <a
                    class="page-link"
                    href="?<%= new URLSearchParams({...qs, page: 1}) %>"
                  >
                    <i class="fa-solid fa-circle-left"></i>
                  </a>
                </li>

                <li class="page-item <%= page===1 ? 'disabled' : '' %>">
                  <a
                    class="page-link"
                    href="?<%= new URLSearchParams({...qs, page: page-1}) %>"
                  >
                    <i class="fa-regular fa-circle-left"></i>
                  </a>
                </li>

                <% for(let i=page-5; i<=page+5; i++) if(i>=1 && i<=totalPages){
                const paramsObj={...qs, page: i}; %>
                <li class="page-item <%= i===page ? 'active' : '' %>">
                  <a
                    class="page-link"
                    href="?<%= new URLSearchParams(paramsObj) %>"
                  >
                    <%= i %>
                  </a>
                </li>
                <% } %>

                <li
                  class="page-item <%= page===totalPages ? 'disabled' : '' %>"
                >
                  <a
                    class="page-link"
                    href="?<%= new URLSearchParams({...qs, page: page+1}) %>"
                  >
                    <i class="fa-regular fa-circle-right"></i>
                  </a>
                </li>

                <li
                  class="page-item <%= page===totalPages ? 'disabled' : '' %>"
                >
                  <a
                    class="page-link"
                    href="?<%= new URLSearchParams({...qs, page: totalPages}) %>"
                  >
                    <i class="fa-solid fa-circle-right"></i>
                  </a>
                </li>
              </ul>
            </nav>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>

<%- include("../parts/scripts") %>
<script>
  const deleteOne = async (sid) => {
    if (confirm(`是否要刪除編號為 ${sid} 的資料?`)) {
      const r = await fetch(`/user/${sid}`, {
        method: "DELETE",
      });
      const result = await r.json();
      console.log(result);
      location.reload(); // 重載頁面
    }
  };

  const uploadForm = document.getElementById("uploadForm");
  const errorMessage = document.getElementById("errorMessage");
  const resultsTable = document
    .getElementById("resultsTable")
    .querySelector("tbody");

  uploadForm.addEventListener("submit", async (e) => {
    e.preventDefault();
    errorMessage.textContent = ""; // 清空錯誤訊息
    resultsTable.innerHTML = ""; // 清空表格

    const formData = new FormData(uploadForm);
    try {
      const response = await fetch("/user/upload", {
        method: "POST",
        body: formData,
      });

      if (!response.ok) {
        const errorData = await response.json();
        errorMessage.textContent = errorData.errors
          ? errorData.errors.join(", ")
          : "上傳失敗";
        return;
      }

      const data = await response.json();
      if (data.errors) {
        errorMessage.textContent = data.errors.join(", ");
        return;
      }
      location.reload(); // 重載頁面
    } catch (error) {
      errorMessage.textContent = "發生錯誤，請稍後再試。";
      console.error("上傳錯誤:", error);
    }
  });
</script>

